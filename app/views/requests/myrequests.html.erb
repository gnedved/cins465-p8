<h1>Listing requests</h1>

<table>
  <thead>
    <tr>
      <th>Wish list</th>
      <th>User</th>
      <th>User from</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <% if current_user && (current_user.id == request.user_id || current_user.id == request.user_to_id) %>
      <tr>
        <td><%= request.wish_list_id %></td>
        <td><%= request.user_id %></td>
        <td><%= request.user_from_id %></td>
        <td><%= request.status %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
